@model MVCExample.Models.Student
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutGuest.cshtml";
}

<h2>Edit Record Here</h2>
@using (Html.BeginForm())
{
    <table>
        <tr><td>Rollno</td><td>@Html.TextBoxFor(a => a.Rno)</td></tr>
        <tr><td>Name</td><td>@Html.TextBoxFor(a => a.Sname)</td></tr>
        <tr><td>Branch</td><td>@Html.TextBoxFor(a => a.Branch)</td></tr>
        <tr><td>Fees</td><td>@Html.TextBoxFor(a => a.Fees)</td></tr>
        <tr><td colspan="2" align="right"><input type="submit" name="btnsubmit" value="Update" /> </td></tr>



    </table>


}
@ViewBag.data
@Html.ActionLink("View Student Record ", "Showdata")

